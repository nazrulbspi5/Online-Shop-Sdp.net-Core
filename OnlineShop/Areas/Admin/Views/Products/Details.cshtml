@model OnlineShop.Models.Products

@{
    ViewData["Title"] = "Details";
}

<br />
<h2 class="text-info">Product Details</h2>
<hr />
<div class="col-md-8">
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="Name" class="control-label"></label>
        </div>
        <div class="col-md-9">
            <input asp-for="Name" readonly="readonly" class="form-control" />
            <input asp-for="Id" type="hidden" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="Price" class="control-label"></label>
        </div>
        <div class="col-md-9">
            <input asp-for="Price" readonly="readonly" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="ProductColor" class="control-label"></label>
        </div>
        <div class="col-md-9">
            <input asp-for="ProductColor" readonly="readonly" class="form-control" />
            <span asp-validation-for="ProductColor" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="ProductTypeId" class="control-label"></label>
        </div>
        <div class="col-md-9">
            @*<select asp-for="ProductTypeId" class="form-control" asp-items="ViewBag.ProductType"></select>*@
            <input asp-for="@Model.ProductTypes.ProductType" readonly="readonly" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="SpeciaTagId" class="control-label"></label>
        </div>
        <div class="col-md-9">
            <input asp-for="@Model.SpecialTag.TagName" readonly="readonly" class="form-control" />
            @*<select asp-for="SpeciaTagId" class="form-control" asp-items="ViewBag.TagList"></select>*@
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="IsAvailable" class="control-label"></label>
        </div>
        <div class="col-md-9 ">
            <input asp-for="IsAvailable" type="checkbox" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-9 col-md-offset-3">
            <a asp-action="Index" class="btn btn-success">Back To List</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        </div>
    </div>
</div>
<div class="col-md-4">
    <img src="~/@Model.Image" width="100%" style="border: 1px solid #d3d3d3" />
</div>
<hr />
